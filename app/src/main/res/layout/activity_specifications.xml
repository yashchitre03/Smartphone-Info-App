<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Specifications">

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TableRow android:padding="10dp">

            <TextView
                android:id="@+id/pixels"
                android:layout_column="1"
                android:padding="3dip"
                android:text="Pixels"
                android:textSize="24sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/pixelsedit"
                android:gravity="left"
                android:padding="3dip"
                android:paddingStart="10dp"
                android:text="--"
                android:textSize="18sp" />
        </TableRow>

        <TableRow android:padding="10dp">

            <TextView
                android:id="@+id/ram"
                android:layout_column="1"
                android:padding="3dip"
                android:text="RAM"
                android:textSize="24sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/ramedit"
                android:gravity="left"
                android:padding="3dip"
                android:paddingStart="10dp"
                android:text="--"
                android:textSize="18sp" />
        </TableRow>

        <TableRow android:padding="10dp">

            <TextView
                android:id="@+id/storage"
                android:layout_column="1"
                android:padding="3dip"
                android:text="Storage"
                android:textSize="24sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/storageedit"
                android:gravity="left"
                android:padding="3dip"
                android:paddingStart="10dp"
                android:text="--"
                android:textSize="18sp" />
        </TableRow>

        <TableRow android:padding="10dp">

            <TextView
                android:id="@+id/camera"
                android:layout_column="1"
                android:padding="3dip"
                android:text="Primary Camera"
                android:textSize="24sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/cameraedit"
                android:gravity="left"
                android:padding="3dip"
                android:paddingStart="10dp"
                android:text="--"
                android:textSize="18sp" />
        </TableRow>

        <TableRow android:padding="10dp">

            <TextView
                android:id="@+id/os"
                android:layout_column="1"
                android:padding="3dip"
                android:text="OS"
                android:textSize="24sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/osedit"
                android:gravity="left"
                android:padding="3dip"
                android:paddingStart="10dp"
                android:text="--"
                android:textSize="18sp" />
        </TableRow>

        <TableRow android:padding="10dp">

            <TextView
                android:id="@+id/fprice"
                android:layout_column="1"
                android:padding="3dip"
                android:text="Price"
                android:textSize="24sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/fpriceedit"
                android:gravity="left"
                android:padding="3dip"
                android:paddingStart="10dp"
                android:text="--"
                android:textSize="18sp" />
        </TableRow>
    </TableLayout>
</androidx.constraintlayout.widget.ConstraintLayout>